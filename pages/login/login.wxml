<!--pages/login/login.wxml-->

<!--  "navigationStyle": "custom" 取消顶部背景 -->
<view class="loginTop">
  <image class="bjPic" src="../../image/login-icon1.png"></image>
</view>

<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="logoForm">
    <view class="lis">
      <image class="icon" src="../../image/login-icon2.png"></image>
      <input class="text" type="number" maxlength="11" value="" placeholder="请输入手机号"></input>
    </view>
    <view class="lis pasWTex">
      <image class="icon" src="../../image/login-icon3.png"></image>
      <input class="text" type="text" value="" placeholder="请输入验证码"></input>
      <button class="yzm font28" type="button" plain="true" size="5">获取验证码</button>
    </view>
    <view class="explain font24">输入未注册的手机号，将自动闯将平台账号、注册即视为同意</view>
      <button class="bigBtnB pubbj color5 font15" bindtap="toLogin" open-type="getUserInfo" role="button" aria-disabled="false">登录</button>
  </view>
</form>